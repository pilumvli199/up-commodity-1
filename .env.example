# Required
UPSTOX_ACCESS_TOKEN=your_upstox_access_token_here
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...
TELEGRAM_CHAT_ID=@your_channel_or_numeric_chat_id

# Either provide trading symbols (from instruments CSV) OR explicit Upstox instrument keys.
# For commodities you might use trading symbols used by Upstox (e.g. GOLD, SILVER, CRUDEOIL) â€” check instruments CSV if unsure.
COMMODITY_SYMBOLS=GOLD,SILVER,CRUDEOIL
# Or (preferred if you know exact instrument_key):
# EXPLICIT_INSTRUMENT_KEYS=NSE_EQ|INE...,MCX_COM|GOLD123,...

# Option chain (optional) - ENABLE_OPTION_CHAIN true to fetch option chain
ENABLE_OPTION_CHAIN=false
OPTION_EXPIRIES=  # e.g. NSE_EQ|INE467B01029:2025-10-02,MCX_COM|GOLD123:2025-10-02

# Polling & thresholds
POLL_INTERVAL=60
CHANGE_THRESHOLD_PCT=0.1
SEND_ALL_EVERY_POLL=false
STRIKE_WINDOW=5

# Market hours (IST) - default wide window for commodity sessions
MARKET_START=09:00
MARKET_END=23:30
